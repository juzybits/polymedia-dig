{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"lineWidth": 90
	},
	"linter": {
		"rules": {
			"style": {
				"noNonNullAssertion": "off",
				"noDescendingSpecificity": "off"
			},
			"a11y": {
				"noStaticElementInteractions": "off",
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"noChildrenProp": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/gen/**"],
			"formatter": {
				"enabled": false
			},
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"noImplicitAnyLet": "off"
					}
				}
			}
		}
	]
}
